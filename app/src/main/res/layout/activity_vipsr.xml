<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:clipToPadding="false"
            android:overScrollMode="never"
            android:paddingEnd="70dp"
            android:paddingStart="70dp" />

        <LinearLayout
            android:id="@+id/ll_rhj"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:background="#fff"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="优惠劵"
                android:textColor="#434343" />

            <TextView
                android:id="@+id/tv_youhui"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text=""
                android:textColor="#f00056" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:src="@mipmap/more_icons_right" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#e5e5e5" />

        <LinearLayout
            android:id="@+id/ll_jh"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginBottom="5dp"
            android:background="#fff"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/tv_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="数量"
                android:textColor="#434343" />

            <EditText
                android:id="@+id/tv_2_2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:background="@null"
                android:inputType="number"
                android:paddingLeft="20dp"
                android:text="1"
                android:textColor="#a0a0a0" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:background="#fff"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="总价"
                android:textColor="#434343" />

            <TextView
                android:id="@+id/tv_zj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:text=""
                android:textColor="#f00065" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginBottom="2px"
            android:layout_marginTop="3dp"
            android:background="#fff"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="支付方式"
                android:textColor="#434343" />

        </LinearLayout>

        <RadioGroup
            android:id="@+id/rg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <RadioButton
                android:id="@+id/rb_wx"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#fff"
                android:button="@null"
                android:drawableLeft="@mipmap/zhifu_weixin"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/radiobutton_zifu"
                android:text="微信支付"
                android:textColor="#434343"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#e5e5e5" />

            <RadioButton
                android:id="@+id/rb_zb"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#fff"
                android:button="@null"
                android:drawableLeft="@mipmap/zhifu_zfb"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/radiobutton_zifu"
                android:text="支付宝支付"
                android:visibility="gone"
                android:textColor="#434343"
                android:textSize="14sp" />

        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:drawableLeft="@drawable/radiobutton_zifu"
                android:drawablePadding="5dp"
                android:padding="5dp"
                android:text="同意"
                android:textColor="#959595"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/tv_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《菲尔南多用户协议》"
                android:textColor="#959595"
                android:textSize="12sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_zhifu"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#fff"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_tv_zj21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="总计:"
                android:textColor="#313131" />

            <TextView
                android:id="@+id/tv_zj2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="7dp"
                android:layout_weight="1"
                android:text="$0"
                android:textColor="#f00056" />

            <TextView
                android:id="@+id/tv_zf"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="7dp"
                android:background="@drawable/shape_gradient_red"
                android:gravity="center"
                android:text="去支付"
                android:textColor="#fff" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="35dp"
        android:layout_marginRight="35dp"
        android:orientation="vertical" />

</RelativeLayout>