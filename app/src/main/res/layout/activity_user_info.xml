<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e6e6e6"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="89dp"
        android:layout_marginTop="15dp"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="3dp"
            android:layout_weight="1"
            android:gravity="left"
            android:text="头像"
            android:textColor="#333333"
            android:textSize="14dp" />

        <com.weisj.fx.view.CircleImageView
            android:id="@+id/user_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="20dp"
            android:src="@mipmap/icon" />

    </LinearLayout>

    <View
        android:layout_width="10dp"
        android:layout_height="0.5dp"
        android:background="#ffffff" />

    <LinearLayout
        android:id="@+id/user_name_linear"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="3dp"
            android:layout_weight="1"
            android:gravity="left"
            android:text="昵称"
            android:textColor="#333333"
            android:textSize="14dp" />


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp">

            <EditText
                android:id="@+id/user_name_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:imeOptions="actionDone"
                android:minWidth="50dp"
                android:singleLine="true"
                android:textColor="#999999"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="#999999"
                android:textSize="14dp" />
        </FrameLayout>


        <ImageView
            android:layout_width="15dp"
            android:layout_height="16dp"
            android:layout_marginRight="16dp"
            android:src="@mipmap/icon_go" />
    </LinearLayout>

    <View
        android:layout_width="10dp"
        android:layout_height="0.5dp"
        android:background="#ffffff" />

    <LinearLayout
        android:id="@+id/user_sex_linear"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="3dp"
            android:layout_weight="1"
            android:gravity="left"
            android:text="性别"
            android:textColor="#333333"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/user_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:text="保密"
            android:textColor="#999999"
            android:textSize="14dp" />


        <ImageView
            android:layout_width="15dp"
            android:layout_height="16dp"
            android:layout_marginRight="16dp"
            android:src="@mipmap/icon_go" />
    </LinearLayout>

    <View
        android:layout_width="10dp"
        android:layout_height="0.5dp"
        android:background="#ffffff" />

    <LinearLayout
        android:id="@+id/user_district_linear"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="3dp"
            android:layout_weight="1"
            android:gravity="left"
            android:text="地区"
            android:textColor="#333333"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/user_district"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:textColor="#999999"
            android:textSize="14dp" />


        <ImageView
            android:layout_width="15dp"
            android:layout_height="16dp"
            android:layout_marginRight="16dp"
            android:src="@mipmap/icon_go" />
    </LinearLayout>

    <View
        android:layout_width="10dp"
        android:layout_height="0.5dp"
        android:background="#ffffff" />

    <LinearLayout
        android:id="@+id/user_staff_linear"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="3dp"
            android:layout_weight="1"
            android:gravity="left"
            android:text="证件号码"
            android:textColor="#333333"
            android:textSize="14dp" />


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp">

            <EditText
                android:id="@+id/user_staff_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:digits="1234567890"
                android:gravity="center_vertical"
                android:inputType="phone"
                android:maxLength="8"
                android:paddingRight="3dp"
                android:singleLine="true"
                android:textColor="#999999"
                android:textColorHint="#aaaaaa"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/user_staff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:singleLine="true"
                android:textColor="#999999"
                android:textSize="14dp" />
        </FrameLayout>


        <ImageView
            android:layout_width="15dp"
            android:layout_height="16dp"
            android:layout_marginRight="16dp"
            android:src="@mipmap/icon_go" />
    </LinearLayout>

</LinearLayout>