<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/ll_add"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/icons_add" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingLeft="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/consignee_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="纱布"
                            android:textColor="#333333"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/consignee_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="9dp"
                            android:text="13555555555"
                            android:textColor="#333333"
                            android:textSize="14dp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/consignee_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:ellipsize="none"
                        android:singleLine="true"
                        android:text="广东省深圳市福田撒犯得上发射点发生士大夫"
                        android:textColor="#999999"
                        android:textSize="13dp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/more_icons_right" />

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:layout_marginTop="7dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginBottom="2px"
                android:background="#fff"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="支付方式"
                    android:textColor="#434343" />

            </LinearLayout>

            <RadioGroup
                android:id="@+id/rg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <RadioButton
                    android:id="@+id/rb_wx"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="#fff"
                    android:button="@null"
                    android:drawableLeft="@mipmap/zhifu_weixin"
                    android:drawablePadding="10dp"
                    android:drawableRight="@drawable/radiobutton_zifu"
                    android:text="微信支付"
                    android:textColor="#434343"
                    android:textSize="14sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#e5e5e5" />

                <RadioButton
                    android:id="@+id/rb_zb"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="#fff"
                    android:button="@null"
                    android:drawableLeft="@mipmap/zhifu_zfb"
                    android:drawablePadding="10dp"
                    android:drawableRight="@drawable/radiobutton_zifu"
                    android:text="支付宝支付"
                    android:textColor="#434343"
                    android:textSize="14sp" />

            </RadioGroup>

            <CheckBox
                android:id="@+id/cb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@null"
                android:drawableLeft="@drawable/radiobutton_zifu"
                android:drawablePadding="5dp"
                android:padding="5dp"
                android:text="同意菲尔南多用户协议"
                android:textColor="#959595"
                android:textSize="12sp"
                android:visibility="gone" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_jh"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="8dp"
            android:background="#fff"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/tv_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="备注"
                android:textColor="#434343" />

            <EditText
                android:id="@+id/tv_2_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="填写备注信息"
                android:textColor="#a0a0a0"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/more_icons_right" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_zhifu"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:background="#fff"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_tv_zj21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="实付押金:"
            android:textColor="#313131" />

        <TextView
            android:id="@+id/tv_zj2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="7dp"
            android:layout_weight="1"
            android:text="$0"
            android:textColor="#f00056" />

        <TextView
            android:id="@+id/tv_zf"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="7dp"
            android:background="@drawable/shape_gradient_red"
            android:gravity="center"
            android:text="提交订单"
            android:textColor="#fff" />


    </LinearLayout>

</RelativeLayout>