<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/good_linear"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/colorf8f8f8"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <ImageView
            android:id="@+id/good_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/good_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:textColor="@color/color666666"
                android:layout_marginTop="8dp"
                android:textSize="@dimen/text_size_13" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/good_record_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="浏览次数:0"
                    android:textColor="@color/color999999"
                    android:textSize="@dimen/text_size_11" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="删除"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:id="@+id/delete_bt"
                    android:textColor="@color/color666666"
                    android:textSize="@dimen/text_size_11" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="21dp"
                android:layout_marginTop="4dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color999999"
                    android:textSize="@dimen/text_size_11" />


            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_linear"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/colorWhite"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:visibility="gone">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="可兑换金额:"
            android:textColor="@color/color999999"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/brand_exchange_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="￥98"
            android:textColor="@color/colorfbb100"
            android:textSize="@dimen/text_size_13" />

        <TextView
            android:id="@+id/brand_exchange_bt"
            android:layout_width="75dp"
            android:layout_height="27dp"
            android:background="@drawable/bt_color_b7ce2a"
            android:gravity="center"
            android:text="兑换"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_size_13" />

    </LinearLayout>
</LinearLayout>